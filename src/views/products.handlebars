<div class="container mt-4">
  <h2 class="text-center mb-4">üì¶ Lista de Productos</h2>

  <div class="row">
    {{#each payload}}
      <div class="col-md-4 mb-4">
        <div class="card h-100 shadow-sm">
          <img 
            src="{{this.thumbnails.[0]}}" 
            class="card-img-top" 
            alt="{{this.title}}" 
            onerror="this.src='/img/no-image.png'"
          >
          <div class="card-body d-flex flex-column">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text text-muted">{{this.description}}</p>
            <p class="fw-bold text-primary mb-1">${{this.price}}</p>
            <p class="text-success">Stock: {{this.stock}}</p>
            <p><span class="badge bg-info">{{this.category}}</span></p>

            <div class="mt-auto d-flex justify-content-between">
              <a href="/products/{{this._id}}" class="btn btn-sm btn-outline-primary">
                Ver m√°s
              </a>
              <form action="/api/carts/ID_DEL_CARRITO/products/{{this._id}}" method="post">
                <button type="submit" class="btn btn-sm btn-success">
                  Agregar üõí
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    {{/each}}
  </div>

  <!-- Paginaci√≥n -->
  <nav aria-label="Paginaci√≥n de productos">
    <ul class="pagination justify-content-center mt-4">
      {{#if hasPrevPage}}
        <li class="page-item">
          <a class="page-link" href="{{prevLink}}">‚¨ÖÔ∏è Anterior</a>
        </li>
      {{/if}}

      <li class="page-item active">
        <span class="page-link">{{page}} / {{totalPages}}</span>
      </li>

      {{#if hasNextPage}}
        <li class="page-item">
          <a class="page-link" href="{{nextLink}}">Siguiente ‚û°Ô∏è</a>
        </li>
      {{/if}}
    </ul>
  </nav>
</div>
