<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pet Ecommerce</title>

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container">
      <a class="navbar-brand fw-bold" href="/">Pet Ecommerce</a>
      <div class="d-flex align-items-center gap-2">
        <a class="btn btn-outline-light" href="/products">Productos</a>
        <div id="userNav" class="d-flex align-items-center gap-2">
          <!-- Se mostrar치 din치micamente con JavaScript -->
        </div>
      </div>
    </div>
  </nav>

  <main class="container">
    {{{body}}}
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    // Actualizar navegaci칩n seg칰n el estado de autenticaci칩n
    (function() {
      const userNav = document.getElementById('userNav');
      const token = localStorage.getItem('token');
      let user = localStorage.getItem('user') ? JSON.parse(localStorage.getItem('user')) : null;

      // Si hay token pero no hay usuario, intentar obtenerlo del servidor
      if (token && !user) {
        fetch('/api/sessions/current', {
          headers: {
            'Authorization': `Bearer ${token}`
          }
        })
        .then(res => {
          // Validar el status HTTP antes de parsear JSON
          if (!res.ok) {
            // Si es 401 (no autorizado), el token es inv치lido o expirado
            if (res.status === 401) {
              localStorage.removeItem('token');
              localStorage.removeItem('user');
              updateNav();
              return null;
            }
            // Para otros errores HTTP, lanzar error para que lo capture el catch
            throw new Error(`HTTP error! status: ${res.status}`);
          }
          return res.json();
        })
        .then(data => {
          // Solo procesar si data existe (no fue null por error 401)
          if (data && data.status === 'success' && data.user) {
            localStorage.setItem('user', JSON.stringify(data.user));
            user = data.user;
            updateNav();
          }
        })
        .catch(err => {
          // Solo loguear el error, no eliminar el token autom치ticamente
          // El token solo se elimina si la respuesta fue 401 (manejado arriba)
          // Esto evita logout agresivo por errores de red temporales
          console.error('Error obteniendo usuario:', err);
          // No hacer nada m치s aqu칤, mantener el estado actual
        });
      }

      function updateNav() {
        if (token && user) {
          // Obtener ID del carrito
          let cartId = '';
          if (user.cart) {
            cartId = typeof user.cart === 'object' ? (user.cart._id || user.cart) : user.cart;
          }
          
          // Usuario logueado
          userNav.innerHTML = `
            <a class="btn btn-outline-info" href="/profile">游녻 ${user.first_name}</a>
            ${cartId ? `<a class="btn btn-outline-warning" href="/carts/${cartId}" id="cartNavBtn">游</a>` : ''}
            <button class="btn btn-outline-danger" onclick="localStorage.removeItem('token'); localStorage.removeItem('user'); window.location.href='/login';">Salir</button>
          `;
        } else {
          // Usuario no logueado
          userNav.innerHTML = `
            <a class="btn btn-outline-light" href="/login">Iniciar Sesi칩n</a>
            <a class="btn btn-outline-success" href="/register">Registrarse</a>
          `;
        }
      }

      updateNav();
    })();
  </script>
</body>
</html>
