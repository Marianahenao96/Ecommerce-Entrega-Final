<div class="container">
  <div class="cart-header">
    <h1>üõí Mi Carrito</h1>
    <div class="cart-actions">
      <a href="/products" class="btn btn-outline">
        ‚Üê Continuar comprando
      </a>
    </div>
  </div>

  {{#if cart.products.length}}
    <div class="cart-content">
      <div class="cart-items">
        {{#each cart.products}}
          <div class="cart-item">
            <div class="item-image">
              {{#if this.product.thumbnails.[0]}}
                <img src="{{this.product.thumbnails.[0]}}" alt="{{this.product.title}}">
              {{else}}
                <div class="no-image">üì¶</div>
              {{/if}}
            </div>

            <div class="item-details">
              <h3 class="item-title">{{this.product.title}}</h3>
              <p class="item-description">{{this.product.description}}</p>
              <div class="item-meta">
                <span class="item-category">{{this.product.category}}</span>
                <span class="item-code">C√≥digo: {{this.product.code}}</span>
              </div>
            </div>

            <div class="item-quantity">
              <label for="quantity-{{this.product._id}}">Cantidad:</label>
              <form action="/api/carts/{{../cart._id}}/products/{{this.product._id}}" method="POST" class="quantity-form">
                <input 
                  type="number" 
                  id="quantity-{{this.product._id}}"
                  name="quantity" 
                  value="{{this.quantity}}" 
                  min="1" 
                  max="{{this.product.stock}}"
                  onchange="this.form.submit()"
                >
              </form>
            </div>

            <div class="item-price">
              <span class="unit-price">${{this.product.price}}</span>
              <span class="total-price">Total: ${{multiply this.quantity this.product.price}}</span>
            </div>

            <div class="item-actions">
              <form action="/api/carts/{{../cart._id}}/products/{{this.product._id}}" method="POST" class="delete-form">
                <input type="hidden" name="_method" value="DELETE">
                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('¬øEliminar este producto del carrito?')">
                  üóëÔ∏è Eliminar
                </button>
              </form>
            </div>
          </div>
        {{/each}}
      </div>

      <div class="cart-summary">
        <div class="summary-card">
          <h3>Resumen del pedido</h3>
          
          <div class="summary-details">
            <div class="summary-item">
              <span>Productos:</span>
              <span>{{cart.products.length}}</span>
            </div>
            
            <div class="summary-item">
              <span>Subtotal:</span>
              <span>${{cartSubtotal}}</span>
            </div>
            
            <div class="summary-item total">
              <span>Total:</span>
              <span>${{cartTotal}}</span>
            </div>
          </div>

          <div class="summary-actions">
            <button class="btn btn-primary btn-large" onclick="alert('¬°Funci√≥n de checkout pr√≥ximamente!')">
              üí≥ Proceder al pago
            </button>
            
            <form action="/api/carts/{{cart._id}}" method="POST" class="clear-cart-form">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="btn btn-secondary" onclick="return confirm('¬øVaciar todo el carrito?')">
                üßπ Vaciar carrito
              </button>
            </form>
          </div>
        </div>
      </div>
    </div>

  {{else}}
    <div class="empty-cart">
      <div class="empty-cart-content">
        <div class="empty-cart-icon">üõí</div>
        <h2>Tu carrito est√° vac√≠o</h2>
        <p>No tienes productos en tu carrito de compras.</p>
        <a href="/products" class="btn btn-primary btn-large">
          üõçÔ∏è Comenzar a comprar
        </a>
      </div>
    </div>
  {{/if}}
</div>

